{
  "get": {
    "tags": [
      "Users"
    ],
    "summary": "Returns a list of all registered users",
    "description": "Only **admin users** can list users",
    "parameters": [
      {
        "in": "header",
        "name": "user_id",
        "schema": {
          "type": "string",
          "format": "uuid"
        },
        "required": "true",
        "description": "A string on format uuid representing a user id"
      }
    ],
    "responses": {
      "200": {
        "description": "An array of users objects",
        "content": {
          "application/json": {
            "schema": {
              "type": "array",
              "items": {
                "$ref": "../../schemas/User.json"
              },
              "example": [
                {
                  "id": "3fa85f64-5717-4562-b3fc-2c963f66afa6",
                  "name": "string",
                  "admin": false,
                  "email": "user@example.com",
                  "created_at": "2021-11-15T22:10:38.819Z",
                  "updated_at": "2021-11-15T22:10:38.819Z"
                },
                {
                  "id": "3fa85f64-5717-4562-b3fc-2c963f66afa6",
                  "name": "string",
                  "admin": false,
                  "email": "user@example.com",
                  "created_at": "2021-11-15T22:10:38.819Z",
                  "updated_at": "2021-11-15T22:10:38.819Z"
                },
                {
                  "id": "3fa85f64-5717-4562-b3fc-2c963f66afa6",
                  "name": "string",
                  "admin": true,
                  "email": "user@example.com",
                  "created_at": "2021-11-15T22:10:38.819Z",
                  "updated_at": "2021-11-15T22:10:38.819Z"
                }
              ]
            }
          }
        }
      },
      "400": {
        "description": "A bad request",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../../schemas/Error.json"
            }
          }
        }
      }
    }
  },
  "post": {
    "tags": [
      "Users"
    ],
    "summary": "Creates a user",
    "requestBody": {
      "required": true,
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "email": {
                "type": "string",
                "format": "email"
              }
            },
            "required": [
              "name",
              "email"
            ]
          }
        }
      }
    },
    "responses": {
      "201": {
        "description": "User created",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../../schemas/User.json"
            },
            "example": {
              "id": "3fa85f64-5717-4562-b3fc-2c963f66afa6",
              "name": "string",
              "admin": false,
              "email": "user@example.com",
              "created_at": "2021-11-15T22:10:38.819Z",
              "updated_at": "2021-11-15T22:10:38.819Z"
            }
          }
        }
      },
      "400": {
        "description": "A bad request",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../../schemas/Error.json"
            }
          }
        }
      }
    }
  }
}